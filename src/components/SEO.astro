---
import type {ISEOProps} from "../types/type"
const {title, description, image, type} = Astro.props as ISEOProps;

const siteUrl = "https://harryrismananda.dev";
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content="Harry Rismananda" />
<meta name="keywords" content="Harry Rismananda, Full Stack Developer, Software Developer, Web Developer, React Developer, Node.js Developer, TypeScript Developer, JavaScript Developer, Remote Developer, Indonesia Developer" />
<link rel="canonical" href={currentUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentUrl} />
<meta property="og:site_name" content="Harry Rismananda Portfolio" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:alt" content="Harry Rismananda - Full Stack Software Developer" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={currentUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:creator" content="@harryrismananda" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="revisit-after" content="7 days" />

<!-- Schema.org Structured Data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Harry Rismananda",
  "url": "https://harryrismananda.dev",
  "image": "https://harryrismananda.dev/profile-picture.jpg",
  "jobTitle": "Full Stack Software Developer",
  "description": "Full Stack Software Developer experienced in React, Node.js, TypeScript, and modern web technologies. Previously managed large-scale digital projects with 12,000+ participants.",
  "email": "harryrismananda@gmail.com",
  "sameAs": [
    "https://github.com/harryrismananda",
    "https://www.linkedin.com/in/harryrismananda/",
    "https://harryrismananda.dev"
  ],
  "alumniOf": [
    {
      "@type": "EducationalOrganization",
      "name": "Hacktiv8",
      "description": "Fullstack Javascript Immersive Program"
    },
    {
      "@type": "EducationalOrganization",
      "name": "Sultan Ageng Tirtayasa University",
      "description": "Metallurgy Engineering"
    }
  ],
  "knowsAbout": [
    "Full Stack Development",
    "React",
    "Next.js",
    "Node.js",
    "TypeScript",
    "JavaScript",
    "MongoDB",
    "PostgreSQL",
    "GraphQL",
    "REST API",
    "Docker",
    "AWS",
    "Project Management"
  ],
  "workLocation": {
    "@type": "Place",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "Indonesia"
    }
  }
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Harry Rismananda Portfolio",
  "alternateName": "Harry Rismananda - Full Stack Developer",
  "url": "https://harryrismananda.dev",
  "description": "Professional portfolio of Harry Rismananda, Full Stack Software Developer specializing in modern web technologies",
  "author": {
    "@type": "Person",
    "name": "Harry Rismananda"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://harryrismananda.dev/?s={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>

